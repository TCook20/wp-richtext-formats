{#
  Ribbon
  Base Ribbon component

  @uses AppendClasses, AddAttributes from utils

  @param  {object}    options
  @param  {string}    ├─ options.class
  @param  {object}    └─ options.attributes

 #}

{# Imports #}
  {% import "@miz/utilities/twig/utils.twig" as utils %}
  {% from "@miz/components/signature/signature.twig" import Signature as signature %}
  {% from "@miz/components/link-list/link-list.twig" import LinkList as linkList %}

{# Parameters #}
  {% set options = _context ? _context : {} %}

{# Variables #}
  {% set ribbon_class = "miz-ribbon" %}
  {% set ribbon_class = utils.AppendClasses(ribbon_class, options.class) %}
  {% set ribbon_attributes = utils.AddAttributes(options.attributes) %}
  {% set ribbon_linklist = options['link-list'] ?: false %}

{# Output #}
  <div class="{{ ribbon_class }}" {{ ribbon_attributes }}>

    {% block ribbon__sig %}
      <div class="miz-ribbon__signature">
        {{ signature({}, {reverse: true}) }}
      </div>
    {% endblock ribbon__sig %}

    {% block ribbon__linklist %}

      {% if ribbon_linklist %}

        {# Set options and assign the list #}
        {% set ribbon_linklist_options = {
          "class": "miz-ribbon__link-list",
          "layout": "inline",
          "list": ribbon_linklist.list
        } %}

        {# Output Link List #}
        {{ linkList(ribbon_linklist_options) }}

      {% endif %}
    {% endblock ribbon__linklist %}

    {% block ribbon__search %}
      <div class="miz-ribbon__search">
        {% include "components/input-group/search/search.twig" %}
      </div>
    {% endblock ribbon__search %}

  </div>
