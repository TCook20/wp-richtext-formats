

{# University signature #}
{% macro Signature(defaults, options) %}
  {% import "@miz/components/signature/signature.twig" as Signature %}
  {% spaceless %}

    {% set baseDefaults = {
      class: null,
      id: null,
      text: ''
    } %}

    {% set baseOptions = {
      size: 'small',
      reverse: false,
      center: false
    } %}

    {% set css = {
      base: '',
      size: {
        small:    'mu-sig-24',
        medium:   'mu-sig-32',
        large:    'mu-sig-48'
      },
      reverse:    'reverse',
      center:     'center'
  } %}

    {# CSS Base #}
    {% set classes = css.base is not empty ? [css.base] : [] %}

    {# OPTIONS #}
    {% set options = options is iterable? baseOptions | merge(options): baseOptions %}
    {% if options is iterable %}

      {# Sizing #}
      {% if options.size == 'small' %}
        {% set classes = classes | merge([css.size.small]) %}
      {% elseif options.size ==   'medium' %}
        {% set classes = classes | merge([css.size.medium]) %}
      {% elseif options.size ==   'large' %}
        {% set classes = classes | merge([css.size.large]) %}
      {% endif %}

      {# Reverse #}
      {% if options.reverse %}
        {% set classes = classes | merge([css.reverse]) %}
      {% endif %}

      {# Center #}
      {% if options.center %}
        {% set classes = classes | merge([css.center]) %}
      {% endif %}

    {% endif %}
    {#/ OPTIONS #}

    {# DEFAULTS #}
    {% set defaults = defaults is iterable? baseDefaults | merge(defaults): baseDefaults %}
    {% if defaults is iterable %}

      {# Class #}
      {% if defaults.class %}
        {% set classes = classes | merge([defaults.class]) %}
      {% endif %}

    {% endif %}
    {#/ DEFAULTS #}

    {# Class build #}
    {% set class = '' %}

    {% for i in classes %}

      {% set class = class ~ i %}
      {% if not loop.last %}
        {% set class = class ~ ' ' %}
      {% endif %}

    {% endfor %}

    <div class="{{ class }}">
      {{ Signature.Logo({}, {}) }}
      {{ Signature.Wordmark({}, {}) }}
    </div>

  {% endspaceless %}
{% endmacro %}

{# Logo #}
{% macro Logo(defaults, options) %}
  {% spaceless %}

    {% set baseDefaults = {
      class: null,
      id: null,
      text: 'MU Logo'
    } %}

    {% set baseOptions = {} %}

    {% set css = {
      base: 'logo'
    } %}

    {% set defaults = defaults is iterable? baseDefaults | merge(defaults): baseDefaults %}
    {% set options = options is iterable? baseOptions | merge(options): baseOptions %}

    <p class="{{ css.base }}">
      <a href="https://missouri.edu">{{ defaults.text }}</a>
    </p>
  {% endspaceless %}
{% endmacro %}

{# Wordmark #}
{% macro Wordmark(defaults, options) %}
  {% spaceless %}

    {% set baseDefaults = {
      class: null,
      id: null,
      text: 'University of Missouri'
    } %}

    {% set baseOptions = {
      foo: 'foo'
    } %}

    {% set css = {
      base: 'wordmark'
    } %}

    {% set defaults = defaults is iterable? baseDefaults | merge(defaults): baseDefaults %}
    {% set options = options is iterable? baseOptions | merge(options): baseOptions %}

    <h1 class="{{ css.base }}">
      <a href="https://missouri.edu">{{ defaults.text }}</a>
    </h1>

  {% endspaceless %}
{% endmacro %}
