{#
  Page header
 #}
{% spaceless %}

{# Imports #}
  {% import "@miz/utilities/twig/utils.twig" as utils %}

{# Parameters #}
  {% set options = _context
    ? _context
    : {} %}

  {% set pageHeaderClass    = "miz-page-header" %}
  {% set pageHeaderAddClass = options.class ?: false %}
  {% set pageHeaderSize     = options.size ?: false %}
  {% set pageHeaderVariant  = options.variant ?: false %}
  {% set pageHeaderTitle    = options.title ?: false %}

{# Variables #}
  {% set pageHeaderClass = pageHeaderSize ? utils.AppendClasses( pageHeaderClass, "miz-page-header--" ~ pageHeaderSize ) : pageHeaderClass %}
  {% set pageHeaderClass = pageHeaderVariant == 'dark' ? utils.AppendClasses( pageHeaderClass, 'miz-page-header--dark' ) : pageHeaderClass %}
  {% set pageHeaderClass = pageHeaderAddClass ? utils.AppendClasses( pageHeaderClass, pageHeaderAddClass ) : pageHeaderClass %}

{% endspaceless %}

{# Output #}
{% if pageHeaderTitle %}
  <header class="{{ pageHeaderClass }}">
    {% block page_header %}
      <div class="miz-container">
        <h2 class="miz-page-header__title">{{ pageHeaderTitle }}</h2>
      </div>
    {% endblock page_header %}
  </header>
{% endif %}
