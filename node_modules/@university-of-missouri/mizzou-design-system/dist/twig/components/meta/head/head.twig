<!DOCTYPE html>
<html{{ html_attributes|default(' dir="ltr" lang="en-US"') }}>
  <head>
    {% block head_meta_base -%}
    <!-- Base meta -->
        <meta charset="UTF-8">
        <meta http-equiv="x-ua-compatible" content="ie=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <meta name="format-detection" content="telephone=no">
        <meta name="robots" content="index,follow">
    {% endblock head_meta_base %}

    {{ head_meta_page_info }}

    {{ head_meta_facebook }}

    {{ head_meta_twitter }}

    {% block head_meta_icons -%}
      <!-- Favicon -->
      <link href="{{ baseURL ?: Site.ParentThemeURL }}/images/favicons/favicon.ico" rel="icon"/>

      <!-- Apple Touch Icons -->
      <link href="{{ baseURL ?: Site.ParentThemeURL }}/images/favicons/apple-touch-icon.png" rel="apple-touch-icon-precomposed"/>
      <meta content="" name="apple-mobile-web-app-title"/>
      <link rel="mask-icon" href="{{ baseURL ?: Site.ParentThemeURL }}/images/favicons/mu-safari-icon.svg" color="black">

      <!-- Microsoft Windows 8+ Tiles -->
      <meta content="" name="application-name"/>
      <meta content="{{ baseURL ?: Site.ParentThemeURL }}/images/favicons/apple-touch-icon.png" name="msapplication-TileImage"/>
      <meta content="#F1B82D" name="msapplication-TileColor"/>
    {% endblock head_meta_icons %}

    {#- Set JS -#}
    {{ head_js }}

    {#- Set CSS -#}
    {{ head_css }}

    {#- Reserved for CMS or site head code declarations -#}
    {{ head_code }}

  </head>

<body{{ body.class ? (' class="' ~ body.class ~ '"')|raw }}>
