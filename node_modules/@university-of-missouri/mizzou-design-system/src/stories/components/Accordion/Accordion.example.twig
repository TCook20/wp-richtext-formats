{% from "@miz/components/Accordion/Accordion.twig" import Accordion as accordion %}

{# Accordion options #}
{% set accordion_options = {} %}

{# Accordion Button options #}
{% set button_options = {
  "text": "Accordion Button",
  "attributes": {
    "data-miz-expand": "accordionContent1"
  }
} %}

{% set button_options_2 = {
  "text": "Accordion Buttons",
  "attributes": {
    "data-miz-expand": "accordionContent2"
  }
} %}

{# Accordion Content #}
{% set accordion_content %}
<h3>Limited submissions</h3>
<p>Funding opportunities restricted by the number of applications MU can submit. <a href="#">More about limited submissions.</a></p>
<h4>Limited submissions</h4>
{%- endset %}

{# Accordion Content options, with content inserted #}
{% set content_options = {
  "attributes": {
    "id": "accordionContent1"
  },
  "content": accordion_content
} %}

{# Accordion Content options, with content inserted #}
{% set content_options_2 = {
  "attributes": {
    "id": "accordionContent2"
  },
  "content": accordion_content
} %}

{{ accordion(button_options, content_options, accordion_options) }}
{{ accordion(button_options_2, content_options_2, accordion_options) }}
