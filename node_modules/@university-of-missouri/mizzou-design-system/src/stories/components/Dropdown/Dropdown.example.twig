{% from "@miz/components/Dropdown/Dropdown.twig" import Dropdown as dropdown %}

{# Dropdown options #}
{% set dropdown_options = {} %}

{# Dropdown Button options #}
{% set button_options = {
  "text": "Base dropdown",
  "attributes": {
    "id": "button1",
    "aria-controls": "dropdownContent",
    "data-miz-toggle-controls": "dropdownContent"
  }
} %}

{# Dropdown Content #}
{% set dropdown_content %}
<div class="miz-card">
  <div class="miz-card__body">
    <h4>A dropdown header</h4>
    <p>Here is some dropdown content</p>
  </div>
</div>
{%- endset %}

{# Dropdown Content options, with content inserted #}
{% set content_options = {
  "attributes": {
    "id": "dropdownContent",
    "role": "menu"
  },
  "content": dropdown_content
} %}

{{ dropdown(button_options, content_options, dropdown_options) }}
