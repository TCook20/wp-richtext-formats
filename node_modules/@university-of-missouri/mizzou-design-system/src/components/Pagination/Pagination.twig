{% if Pagination is not empty and Pagination.paged %}
  {% if PaginationClass is empty %}
    {% set PaginationClass = 'miz-pagination' %}
  {% endif %}
  <div class="{{ PaginationClass }}">
    <ul class="miz-pagination__list">
      {% for PageItem in Pagination.pages %}
        <li class="miz-pagination__list-item{% if PageItem.class is not empty %} {{ PageItem.class }}{% endif %}">
          {% if PageItem.href is not empty %}<a class="miz-pagination__link" href="{{ PageItem.href }}">{% endif %}
            {{ PageItem.text }}
          {% if PageItem.href is not empty %}</a>{% endif %}
        </li>
      {% endfor %}
    </ul>
  </div>
{% endif %}