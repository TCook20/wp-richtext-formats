{#
  Masthead
  Base Masthead component

  @uses AppendClasses, AddAttributes from utils

 #}

{# Imports #}
  {% import "@miz/utilities/twig/utils.twig" as utils %}

{# Parameters #}
  {% set options = _context
    ? _context
    : {} %}

{# Variables #}
  {% set mastheadName = options.title ?? Site.Name %}
  {% set mastheadUrl = options.href ?? Site.URL %}
  {% set mastheadSubtitle = options.subtitle ?? Site.subtitle %}
  {% set mastheadClass = "miz-masthead" %}
  {% set mastheadClass = utils.AppendClasses( mastheadClass, options.class ) %}
  {% set mastheadAttributes = utils.AddAttributes( options.attributes ) %}

{# Output #}
  <div class="{{ mastheadClass }}" {{ mastheadAttributes }} role="banner">
    <h1 class="miz-masthead__title">
      <a title="{{ mastheadName }}" href="{{ mastheadUrl | default('/') }}">{{ mastheadName | default('Default site name') }}</a>
    </h1>
    {% if mastheadSubtitle -%}
      <p class="miz-masthead__subtitle">{{ mastheadSubtitle }}</p>
    {% endif %}
  </div>
