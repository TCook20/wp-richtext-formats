{% macro default(og) %}
    {% from "@miz/components/Meta/OpenGraph/OpenGraph.twig" import OpenGraphURL as openGraphURL %}
    {% from "@miz/components/Meta/OpenGraph/OpenGraph.twig" import OpenGraphTitle as openGraphTitle %}
    {% from "@miz/components/Meta/OpenGraph/OpenGraph.twig" import OpenGraphDescription as openGraphDescription %}
    {% from "@miz/components/Meta/OpenGraph/OpenGraph.twig" import OpenGraphSiteName as openGraphSiteName %}
    {% from "@miz/components/Meta/OpenGraph/OpenGraph.twig" import OpenGraphImage as openGraphImage %}

    {% set default_og_image = og.base_theme_url ~ 'images/favicons/apple-touch-icon.png' %}

    <!-- Open Graph -->
    {{ openGraphURL(og.url) }}
    {{ openGraphTitle(og.title) }}
    {{ openGraphDescription(og.description) }}
    {{ og.site_name is defined ? openGraphSiteName(og.site_name) }}
    {{ og.image is defined and og.image is not empty ? openGraphImage(og.image) : openGraphImage({url: default_og_image, alt: "Stacked MU Logo"}) }}
{%- endmacro %}

{# URL #}
{% macro OpenGraphURL(url) %}
    <meta property="og:url" content="{{ url|trim }}" />
{%- endmacro %}

{# Title #}
{% macro OpenGraphTitle(title) %}
    <meta property="og:title" content="{{ title|trim }}" />
{%- endmacro %}

{# Description #}
{% macro OpenGraphDescription(description) %}
    <meta property="og:description" content="{{ description|trim }}" />
{%- endmacro %}

{# Site Name #}
{% macro OpenGraphSiteName(site_name) %}
    <meta property="og:site_name" content="{{ site_name|trim }}" />
{%- endmacro %}

{# Image #}
{% macro OpenGraphImage(image) %}
    {% from "@miz/components/Meta/OpenGraph/OpenGraph.twig" import OpenGraphImageAlt as openGraphImageAlt %}
    <meta property="og:image:url" content="{{ image.url|trim }}" />
    {{ image.alt is defined and image.alt is not empty ? openGraphImageAlt(image) }}
{%- endmacro %}

{# Image Alt #}
{% macro OpenGraphImageAlt(image) %}
    <meta property="og:image:alt" content="{{ image.alt|trim }}" />
{%- endmacro %}
