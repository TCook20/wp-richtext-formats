{% macro default(page, Site) %}
  {% from "@miz/components/Meta/PageInfo/PageInfo.twig" import PageInfoTitle as pageInfoTitle %}
  {% from "@miz/components/Meta/PageInfo/PageInfo.twig" import PageInfoDescription as pageInfoDescription %}

    <!-- Page meta -->
    {{ pageInfoTitle(page.title) }}
    {{ page.description is defined and page.description is not empty ? pageInfoDescription(page.description) }}
{%- endmacro %}

{# Title #}
{% macro PageInfoTitle(title) %}
    <title>{{ title }}</title>
{%- endmacro %}

{# Description #}
{% macro PageInfoDescription(description) %}
    <meta name="description" content="{{ description }}">
{%- endmacro %}
