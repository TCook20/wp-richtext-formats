{% macro default(twitter, Site) %}
    {% from "@miz/components/Meta/Twitter/Twitter.twig" import TwitterCard as twitterCard %}
    {% from "@miz/components/Meta/Twitter/Twitter.twig" import TwitterSite as twitterSite %}
    {% from "@miz/components/Meta/Twitter/Twitter.twig" import TwitterTitle as twitterTitle %}
    {% from "@miz/components/Meta/Twitter/Twitter.twig" import TwitterDescription as twitterDescription %}
    {% from "@miz/components/Meta/Twitter/Twitter.twig" import TwitterImage as twitterImage %}

    {% set default_twitter_image = twitter.base_theme_url ~ 'images/social/twitter/shared-image.png' %}

    <!-- Twitter Cards -->
    {{ twitterCard(twitter.card) }}
    {{ twitterSite(twitter.site) }}
    {{ twitterTitle(twitter.title) }}
    {{ twitterDescription(twitter.description) }}
    {{ twitter.image.url is defined ? twitterImage(twitter.image) : twitterImage({url: default_twitter_image, alt: "A University of Missouri website"}) }}
{%- endmacro %}

{% macro TwitterCard(card) %}
    <meta name="twitter:card" content="{{ card|default('summary') }}" />
{%- endmacro %}

{% macro TwitterTitle(title) %}
    <meta name="twitter:title" content="{{ title|trim }}" />
{%- endmacro %}

{% macro TwitterDescription(description) %}
    <meta name="twitter:description" content="{{ description|trim }}" />
{%- endmacro %}

{# Image #}
{% macro TwitterImage(image) %}
    {% from "@miz/components/Meta/Twitter/Twitter.twig" import TwitterImageAlt as twitterImageAlt %}
    <meta name="twitter:image" content="{{ image.url|trim }}" />
    {{ image.alt is defined ? twitterImageAlt(image) }}
{%- endmacro %}

{# Image Alt #}
{% macro TwitterImageAlt(image) %}
    <meta name="twitter:image:alt" content="{{ image.alt|trim }}" />
{%- endmacro %}

{#
    Site
    This is NOT the Site name but the Twitter account most closely tied with the site.
 #}
{% macro TwitterSite(site) %}
    <meta name="twitter:site" content="{{ site|default('@Mizzou')|trim }}" />
{%- endmacro %}
