{#

  Colophon
  Base Colophon pattern.

  @uses   AppendClasses, AddAttributes from @miz/utilties/utils.twig

  @param  {object}    options
  @param  {string}    ├─ options.class
  @param  {object}    └─ options.attributes (optional)

#}
{%- spaceless %}
{# Imports #}
  {% import "@miz/utilities/twig/utils.twig" as utils %}

{# Parameters #}
  {% set options = _context ?: {} %}

  {% set colophonClass        = "miz-colophon" %}
  {% set colophonClass        = options.class ? utils.AppendClasses( colophonClass, options.class ) : colophonClass %}
  {% set colophonAttributes   = options.attributes ? utils.AddAttributes( options.attributes ) %}

  {% set colophonDepartment   = options.department %}
  {% set colophonEmail        = options.email %}
  {% set colophonAddress      = options.address %}
  {% set colophonPhone        = options.phone %}

{# Variables #}
  {% set MizzouCopyrightYear = "now" | date( "Y" ) %}

{% endspaceless -%}

{# Output #}
  <div class="{{ colophonClass }}"{{ colophonAttributes }}>
    {% block colophon %}
      {% block colophon__copyright %}

        <div class="miz-copyright">
          <p><small>&copy; <time datetime="{{ MizzouCopyrightYear }}">{{ MizzouCopyrightYear }}</time> &#8212; Curators of the <a href="//www.umsystem.edu/">University of Missouri</a>. All rights reserved. <a href="https://missouri.edu/copyright/">DMCA and other copyright information</a>. <a href="https://missouri.edu/privacy/">Privacy policy</a></small></p>
        </div>

      {% endblock colophon__copyright %}

      {% block colophon__publisher %}

        {% if colophonDepartment %}
          <div class="miz-publisher">
              <p><small>Published by {{ colophonDepartment }}, {{ colophonAddress }}</small></p>
              <p><small><strong>Email:</strong> <a href="mailto:{{ colophonEmail }}">{{ colophonEmail }}</a></small></p>
          </div>
        {% endif %}

      {% endblock colophon__publisher %}
    {% endblock %}
  </div>
