
{%- spaceless %}
  {# Imports #}
    {% from '@miz/components/Nav/Nav.twig' import Nav as nav %}
    {% from '@miz/components/Button/Button.twig' import ButtonWithIcon as button %}

  {# Variables #}
    {% set navigation_options = navigation_options is defined ? navigation_options : false %}
    {% set navigation_menu_button_options = navigation_menu_button_options is defined ? navigation_menu_button_options : {} %}
{% endspaceless -%}

{# Output #}
  {% if navigation_options and navigation_menu_button_options and navigation_options.list.items %}
    <div class="miz-primary-navigation miz-expand">
      {% if navigation_menu_button_options %}
        {{- button(navigation_menu_button_options.icon, navigation_menu_button_options.options) -}}
      {% endif %}

      {{ nav(navigation_options) }}
    </div>
  {% endif %}
