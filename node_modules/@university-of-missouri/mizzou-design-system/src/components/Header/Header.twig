{#
/**
 * @file
 * Header
 * Base Header component.
 *
 * @uses  Ribbon from @miz/components/Ribbon/Ribbon.twig
 * @uses  Masthead from @miz/components/Masthead/Masthead.twig
 * @uses  Primary navigation from @miz/components/Navigation/Primary/Primary.twig
 *
 * Available variables:
 * @var array header_options: Header options
 *    header_options
 *    ├─ 'ribbon'       =>  array Ribbon options. @see Ribbon
 *    ├─ 'masthead'     =>  array Masthead options. @see Masthead
 *    └─ 'navigation'   =>  array Navigation options. @see Primary navigation
 *
 */
#}
{% spaceless %}
{# Parameters #}
  {% set header_options = _context ? _context : {} %}

{# Variables #}
  {% set ribbon_options = header_options.ribbon %}
  {% set masthead_options = header_options.masthead %}
  {% set navigation_options = header_options.navigation is defined and header_options.navigation is not null ? header_options.navigation %}
{% endspaceless -%}

{# Output #}
  <header class="miz-header">

    {# Ribbon #}
    {% block ribbon %}
      <div class="miz-fill--black">
        <div class="miz-container">
          {% include "components/Ribbon/Ribbon.twig" with ribbon_options only %}
        </div>
      </div>
    {% endblock ribbon %}

    {# Masthead #}
    {% block masthead %}
      <div class="miz-fill--white">
        <div class="miz-container">
          {% include "components/Masthead/Masthead.twig" with masthead_options only %}
        </div>
      </div>
    {% endblock masthead %}

    {# Primary navigation #}
    {% block navigation %}
      {% if navigation_options.navigation_options.list.items %}
        <div class="miz-fill--gold">
          <div class="miz-container">
            {% include "components/Navigation/Primary/Primary.twig" with navigation_options only %}
          </div>
        </div>
      {% endif %}
    {% endblock navigation %}

  </header>
