# https://editorconfig.org/

# top-most EditorConfig file
root = true

# Tab indentation (no size specified)
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# Yaml rules
[*.yml]
indent_size = 2

# Markdown
[*.md]
trim_trailing_whitespace = false

# JS, jsx
[*.{js,jsx}]
indent_size = 2

# MDX
[*.mdx]
indent_size = 2

# CSS
[*.{css,scss}]
indent_size = 2

# HTML and Twig
[*.{html,htm}]
indent_size = 2

# SVGs
[*.svg]
indent_size = 2

# PHP, Twig (PHP-flavored) and JSON
[*.{php,twig,json}]
indent_size = 4

[package.json]
indent_size = 2

# TypeScript
[*.{ts,tsx}]
indent_size = 2

[tsconfig.json]
indent_size = 2

# GraphQL
[*.{graphql,gql}]
indent_size = 2
